{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun ${PAI_DIR}/Hooks/capture-all-events.ts --event-type PostToolUse"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun ${PAI_DIR}/Hooks/capture-session-summary.ts"
          }
        ]
      }
    ]
  }
}
